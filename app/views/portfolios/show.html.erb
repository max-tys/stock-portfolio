<%# Flash message %>
<% if notice %>
  <div class="flash-message"><%= notice %></div>
<% end %>

<%# Table of holdings %>
<article>
  <div class="article-header">
    <div class="article-title">
      <h4>Portfolio: <%= @portfolio.name %></h4>
      <h2>List of Holdings</h2>
    </div>
    <div class="article-nav">
      <%= button_to "Rename", edit_portfolio_path(@portfolio), method: :get %>
      <%= button_to "Delete", @portfolio, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this portfolio?" } %>
    </div>
  </div>

  <%# render "holdings/holding", portfolio: @portfolio %>
  <table>
    <thead>
      <tr>
        <th>Symbol</th>
        <th>Name</th>
        <th>Shares</th>
        <th>Cost</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <% @portfolio.holdings.each do |holding| %>
        <%# Consider changing to holding_path %>
        <tr onclick="window.location='/holdings/<%= holding.id %>';" style='cursor: pointer;'>
          <td><%= holding.symbol %></td>
          <td>(Name)</td>
          <td>0</td>
          <td>$0</td>
          <td>$0</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>

<%# Form %>
<div class="form-container">
  <h2>Add Holding</h2>
  <%= form_with url: portfolio_holdings_path(@portfolio) do |form| %>
    <% if @holding.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@holding.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

        <ul>
          <% @holding.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= field_set_tag do %>
      <%= form.text_field "holding[symbol]", placeholder: "Holding symbol" %>
      <%= form.submit "Submit" %>
    <% end %>
  <% end %>
</div>