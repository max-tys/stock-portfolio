<% if notice %>
  <div class="flash-message"><%= notice %></div>
<% end %>

<article>
  <div class="article-header">
    <div class="article-title">
      <h4>Portfolio: <%= @portfolio.name %></h4>
      <h2>List of Holdings</h2>
    </div>
    <div class="article-nav">
      <%= button_to "Rename", edit_portfolio_path(@portfolio), method: :get %>
      <%= button_to "Delete", @portfolio, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this portfolio?" } %>
    </div>
  </div>

  <%= render "holdings/holding", portfolio: @portfolio %>
</article>

<div class="form-container">
  <h2>Add Holding</h2>
  <%# @portfolio for the action path, @holding for the model %>
  <%= form_with(model: [@portfolio, @holding]) do |form| %>
    <%= field_set_tag do %>
      <%= form.text_field :symbol, placeholder: "Holding symbol" %>
      <%= form.submit "Submit" %>
    <% end %>
  <% end %>
</div>