<%# Show a single portfolio and its associated holdings %>
<%# Provides the option to add a holding on the same page %>

<%# Flash message %>
<% if notice %>
  <div class="flash-message"><%= notice %></div>
<% end %>

<%# Table of holdings %>
<article>
  <div class="article-header">
    <div class="article-title">
      <h4>Portfolio: <%= @portfolio.name %></h4>
      <h2>List of Holdings</h2>
    </div>
    <div class="article-nav">
      <%= button_to "Rename", edit_portfolio_path(@portfolio), method: :get %>
      <%= button_to "Delete", @portfolio, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this portfolio?" } %>
    </div>
  </div>

  <%= render "holdings/holding", portfolio: @portfolio %>
</article>

<%# Form %>
<div class="form-container">
  <h2>Add Holding</h2>
  <%= form_with url: portfolio_holdings_path(@portfolio) do |form| %>
    <% if @holding.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@holding.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

        <ul>
          <% @holding.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= field_set_tag do %>
      <%= form.text_field "holding[symbol]", value: @holding.symbol, placeholder: "Stock ticker symbol" %>
      <%= form.submit "Submit" %>
    <% end %>
  <% end %>
</div>