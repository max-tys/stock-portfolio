<article>
  <div class="article-header">
    <div class="article-title">
      <h4>Portfolio: <%= @portfolio.name %></h4>
      <h4>Holding: <%= @holding.symbol %></h4>
      <h2>List of Transactions</h2>
    </div>
   
    <%= button_to "Destroy Holding", holding_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this holding?" } %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Shares</th>
        <th>Cost</th>
        <th>Value</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <%# Todo %>
    </tbody>
  </table>
</article>

<%# Form %>
<div class="form-container">
  <h2>Add Transaction</h2>
  <%= form_with url: holding_transactions_path(@holding) do |form| %>
    <% if @transaction.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

        <ul>
          <% @transaction.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= field_set_tag do %>
      <%= form.text_field "transaction[price]", placeholder: "Transacted price" %>
      <%= form.text_field "transaction[quantity]", placeholder: "Quantity" %>
      <%= form.submit "Submit" %>
    <% end %>
  <% end %>
</div>