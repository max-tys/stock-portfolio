<%# Form to add holding %>
<div class="form-container">
  <h2>Add Holding</h2>
  <%# Controller#Action: holdings#create %>
  <%# URI Pattern: POST /portfolios/:portfolio_id/holdings %>
  <%= form_with(model: [@portfolio, @holding]) do |form| %>
    <% if @holding.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@holding.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

        <ul>
          <% @holding.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= field_set_tag do %>
      <%= form.text_field :symbol, value: @holding.symbol, placeholder: "Stock ticker symbol" %>
      <%= form.submit "Submit" %>
    <% end %>
  <% end %>
</div>