<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Shares</th>
      <th>Last Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% portfolio.holdings.each do |holding| %>
      <tr onclick="window.location='<%= holding_path(holding) %>';" style='cursor: pointer;'>
        <td><%= holding.symbol %></td>
        <td><%= sprintf('%.2f', holding.transactions.pluck(:quantity).sum) %></td>
        <td>$<%= sprintf('%.2f', 0) %></td>
        <td>$<%= sprintf('%.2f', 0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>